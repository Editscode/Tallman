<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="854px"
    android:layout_height="480px"
    tools:context=".ui.second.SecondFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="123px"
            android:layout_height="135px"
            app:srcCompat="@drawable/ic_vmtp2logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Хорошего рабочего дня,"
            android:textAlignment="center"
            android:textColor="#183961"
            android:textSize="31px" />

        <TextView
            android:id="@+id/goodDay"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="30px"
            android:text="#имя пользователя#"
            android:textAlignment="center"

            android:textColor="#183961"
            android:textSize="31px"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="70px"
            android:layout_height="70px"
            android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

        <Button
            android:id="@+id/in_buttonSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

</FrameLayout>
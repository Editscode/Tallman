<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test"
        android:layout_width="854px"
        android:layout_height="480px">

        <EditText
            android:id="@+id/inPassword"
            android:layout_width="574px"
            android:layout_height="64px"
            android:background="@drawable/ic_login"
            android:hint="Проговорите ваш код авторизации по цифрам"
            android:padding="18px"
            android:textColor="#183961"
            android:textSize="18px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="PIN"
            android:textColor="#183961"
            android:textSize="20px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.169"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514" />

        <ImageView
            android:layout_width="123px"
            android:layout_height="135px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.159"
            app:srcCompat="@drawable/logovmtp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИСКТ"
            android:textColor="#183961"
            android:textSize="30px"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.437" />

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="12dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76">

            <Button
                android:id="@+id/button5"

                android:layout_width="18dp"
                android:layout_height="30px"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle"

                android:text="1"
                android:textSize="18px" />

            <Button
                android:id="@+id/button2"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="2"
                android:textSize="18px" />

            <Button
                android:id="@+id/button"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="3"
                android:textSize="18px" />

            <Button
                android:id="@+id/button7"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="4"
                android:textSize="18px" />

            <Button
                android:id="@+id/button8"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="5"
                android:textSize="18px" />

            <Button
                android:id="@+id/button6"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="6"
                android:textSize="18px" />

            <Button
                android:id="@+id/button10"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="7"
                android:textSize="18px" />

            <Button
                android:id="@+id/button9"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="8"
                android:textSize="18px" />

            <Button
                android:id="@+id/button12"

                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"

                android:text="9"
                android:textSize="18px" />

            <Button
                android:id="@+id/button11"

                android:layout_width="18dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_2"

                android:text="0"
                android:textSize="18px" />

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="200px"
            android:layout_height="64px"
            android:text="Чистый Текст"
            android:textSize="10px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.086" />

        <Button
            android:id="@+id/button13"
            android:layout_width="200px"
            android:layout_height="64px"
            android:text="Вход"
            android:textSize="10px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.899" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
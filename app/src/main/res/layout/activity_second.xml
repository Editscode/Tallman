<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
        android:layout_width="854px"
        android:layout_height="480px">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123px"
        android:layout_height="135px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/ic_vmtp2logo" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="70px"
        android:layout_height="70px"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goodDay2"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
            android:id="@+id/goodDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Хорошего рабочего дня,"
            android:textAlignment="center"
            android:textColor="#183961"
            android:textSize="31px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goodDay2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="#имя пользователя#"
            android:textAlignment="center"
            android:textColor="#183961"

            android:textSize="31px"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.598" />



        </androidx.constraintlayout.widget.ConstraintLayout>

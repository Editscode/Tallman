<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="854px"
    android:layout_height="480px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="774px"
        android:layout_height="400px"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Подтверждение"
            android:textAlignment="center"
            android:textColor="#183961"
            android:textSize="35px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:paddingBottom="5px"
            android:text="Выполнить операцию?"
            android:textAlignment="center"
            android:textColor="#183961"
            android:textSize="26px"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Прием с судна: "
                        android:textAlignment="textStart"
                        android:textColor="#183961"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Контейнер: "
                        android:textAlignment="textStart"
                        android:textColor="#183961"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Тягач: "
                        android:textAlignment="textStart"
                        android:textColor="#183961"
                        android:textSize="26px"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/in_seep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_light"
                        android:text="Contship Ace 049/050"
                        android:textColor="#183961"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/in_ktk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_light"
                        android:text="AAAA7904321"
                        android:textColor="#183961"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/in_tractor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro_light"
                        android:text="TEO0254789RUS"
                        android:textColor="#183961"
                        android:textSize="26px" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="#4CAF50"
                android:text="Подтвердить" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="854px"
    android:layout_height="480px"
    tools:context=".ui.login.LoginFragment">

    <Button
        android:id="@+id/inLogin"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:text="Войти" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="123px"
            android:layout_height="135px"
            app:srcCompat="@drawable/logovmtp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="ИСКТ"
            android:textColor="#183961"
            android:textSize="30px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN"
                android:textColor="#183961"
                android:textSize="20px" />

            <TextView
                android:id="@+id/inPassword"
                android:layout_width="574px"
                android:layout_height="64px"
                android:background="@drawable/ic_login"
                android:hint="Проговорите ваш код авторизации по цифрам"
                android:padding="18px"
                android:text="@={viewModel.userPassword}"
                android:textColor="#183961"
                android:textSize="18px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="185dp"
            android:layout_height="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="18dp"
                android:layout_height="30px"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle"
                android:text="1"
                android:textSize="18px" />

            <Button
                android:id="@+id/button2"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="2"
                android:textSize="18px" />

            <Button
                android:id="@+id/button"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="3"
                android:textSize="18px" />

            <Button
                android:id="@+id/button7"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="4"
                android:textSize="18px" />

            <Button
                android:id="@+id/button8"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="5"
                android:textSize="18px" />

            <Button
                android:id="@+id/button6"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="6"
                android:textSize="18px" />

            <Button
                android:id="@+id/button10"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="7"
                android:textSize="18px" />

            <Button
                android:id="@+id/button9"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="8"
                android:textSize="18px" />

            <Button
                android:id="@+id/button12"
                android:layout_width="17dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_1"
                android:text="9"
                android:textSize="18px" />

            <Button
                android:id="@+id/button11"
                android:layout_width="18dp"
                android:layout_height="30px"
                android:layout_marginRight="1dp"
                android:background="@drawable/ic_rectangle_2"
                android:text="0"
                android:textSize="18px" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>